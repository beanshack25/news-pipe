{
    "manifest_version": 3,
    "name": "Smooth Overlay Extension",
    "version": "1.0",
    "description": "Injects a smooth right-to-left overlay into any webpage",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_title": "Show Overlay"
    }
  }
  